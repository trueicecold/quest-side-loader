    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch Backend (Watch)",
            "console": "integratedTerminal",
            "internalConsoleOptions": "neverOpen",
            "program": "${workspaceFolder}/index.js",
            "request": "launch",
            "restart": true,
            "cwd": "${workspaceFolder}",
            "runtimeExecutable": "nodemon",
            "type": "node"
        },
        {
            "name": "Package Backend",
            "console": "integratedTerminal",
            "internalConsoleOptions": "neverOpen",
            "request": "launch",
            "cwd": "${workspaceFolder}",
            "runtimeExecutable": "npm",
            "runtimeArgs": [
                "run-script",
                "package"
            ],
            "type": "node"
        }
    ]
}